        <hr>
        <h5>Add your comment <span class="text-danger"><%= user.name %></span> </h5>
        <form action="/comment/<%= sacco._id %> " method="POST">
            <textarea name="comment" class="form-control" required id="comment" cols="5" rows="5" placeholder="Start typing..."></textarea> <br>
            <button class="btn btn-primary">Comment</button>
        </form>
        <br>
        <h6>All Comments</h6>
        <% if(comment) { %>
            <% for(com of comment) { %> 
                <li><%= com.comment %> </li>
            <% } %>
        <% } else { %>
            <p>No comments available Add comment</p>
        <% } %>
        
        <br> 
        <a href="/details/<%= sacco._id %>/edit "><button class="btn btn-info">Edit Info</button></a>
        <br> <br>
        <form action="/details/<%= sacco._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete Sacco</button>
        </form>
    </div>

