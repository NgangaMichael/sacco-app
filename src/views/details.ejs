<%- include("partials/header")  %>
<%- include("partials/navbar")  %> 

    <div class="container" style="margin-top: 5rem;">

        <div class="container">
        <div class="row">
            <div class="col-4">
                <h3>Name: <%= sacco.name %> </h3>
                <p>Units: <%= sacco.units %> </p>
                <p>Road: <%= sacco.road %> </p>
                <p>About: <%= sacco.about %> </p>
            </div>
            <div class="col-8">
                <img src="/uploads/images/<%= sacco.image %> " style="width: 100%; height: 10rem;">
            </div>
        </div>
        </div>
