<%- include("partials/header")  %>
<%- include("partials/navbar")  %> 

    <div class="container" style="margin-top: 5rem;">
        <h5>Welcome <%= user.name %> </h5>
        <form action="/logout" method="POST">
            <button class="btn btn-danger">Log Out</button>
        </form>
        <hr>
        <div class="container">
        <div class="row">
            <div class="col-9">
                    
                    <% if(sacco.length > 0) { %>
                        <% for(sac of sacco) { %>
                            <div class="card mb-3" style="max-width: 80%;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                <img src="../public/uploads/images/<%= sac.image %> " class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= sac.name %> </h5>
                                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small><a href="/details/<%= sac._id %> ">Read more</a></p>
                                </div>
                                </div>
                            </div>
                            </div>
                        <% } %>
                    <% } else { %>
                        <h1>NO SAACOS FOUND ADD A SACCO</h1>
                    <% } %>
            </div>
            <div class="col-3">
                <h5>Related Information</h5>

            </div>
        </div>
        </div>
    </div>

<%- include("partials/footer")  %> 