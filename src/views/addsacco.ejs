<%- include("partials/header")  %>
<%- include("partials/navbar")  %> 

    <div class="container" style="margin-top: 5rem;">
        <div class="container" style="width: 50%; margin: auto;">
            <h4>Welcome <%= user.name %> Add a Sacco</h4>
            <hr>
        <form action="/addsacco" method="POST" enctype="multipart/form-data">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" required>
            <label for="road" class="form-label">Road</label>
            <input type="text" class="form-control" name="road" id="road" required>
            <label for="units" class="form-label">Units</label>
            <input type="number" class="form-control" name="units" id="units" required>
            <label for="about" class="form-label">About</label> <br>
            <textarea name="about" class="form-control" id="about" cols="30" rows="5" required></textarea>
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" name="image" id="image">
            <br>
            <button class="btn btn-primary">Save Sacco</button>
        </form>
        <br>
        </div>
    </div>

<%- include("partials/footer")  %> 